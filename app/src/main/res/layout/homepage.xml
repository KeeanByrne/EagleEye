<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#A0BFE2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <!--  -->
            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView"
                orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                android:contentDescription="Image representing something"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                tools:ignore="ExtraText">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- TextView -->
                    <TextView
                        android:id="@+id/text_logo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textStyle="bold" />

                    <!-- ImageView -->
                    <ImageView
                        android:id="@+id/settingsIcon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Settings Cog"
                        android:scaleType="centerCrop"
                        android:src="@drawable/settingstwo_icon" />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:contentDescription="Image representing something"
                        android:scaleType="centerCrop"
                        android:src="@drawable/jeff_bezos" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!-- Recent Bird Observation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <!-- Label for recent bird observations -->
            <TextView
                android:id="@+id/myLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Recent bird observations"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Details of the bird observations -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <!-- cards for the bird observation -->
                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

        <!-- The menu layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Label for menu -->
            <TextView
                android:id="@+id/menuLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Menu"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Menu options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Observations -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    android:onClick="handleObservationPageClick"
                    app:cardCornerRadius="8dp">
                    >

                    <!-- Observation info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <!-- Oberservation Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="Image representing something"
                                android:scaleType="centerCrop"
                                android:src="@drawable/binoculars_icon" />

                        </LinearLayout>

                        <!-- Oberservation Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"

                            >

                            <TextView
                                android:id="@+id/observationsHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Observations"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/observationsSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Record and view observations"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Birding Hotspots -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"

                    >

                    <!-- Birding Hotspot info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <!-- Birding Hotspot Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="Image representing something"
                                android:scaleType="centerCrop"
                                android:src="@drawable/popular_icon" />

                        </LinearLayout>

                        <!-- Birding Hotspot Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/hotspotHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Birding Hotspot"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/hotspotSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View current bird hotspots"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Settings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp">

                    <!-- Settings info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <!-- Settings Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:contentDescription="Image representing something"
                                android:scaleType="centerCrop"
                                android:src="@drawable/settingstwo_icon" />

                        </LinearLayout>

                        <!-- Settings Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/settingsHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Birding Hotspot"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/settingsSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Change your current settings"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>