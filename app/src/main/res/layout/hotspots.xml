<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0BFE2"
        android:orientation="vertical">


        <!-- Heading Layer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

            <!-- TextView -->
            <TextView
                android:id="@+id/text_logo"
                android:layout_width="0dp"
                android:layout_weight="1"                        android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <!-- ImageView Home Screen -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Image representing something"
                android:src="@drawable/home_screen"
                android:scaleType="centerCrop"
                android:id="@+id/homeBtn"
                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Image representing something"
                android:src="@drawable/jeff_bezos"
                android:scaleType="centerCrop"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />


        </LinearLayout>

        <!-- Content Layer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center_vertical">

            <!-- TextView -->
            <TextView
                android:id="@+id/text_logo_observations"
                android:layout_width="match_parent"
                android:layout_weight="1"                        android:layout_height="wrap_content"
                android:text="Hotspots"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <!-- Add Google Map -->
            <fragment
                android:id="@+id/mapView"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                tools:context=".MapsActivity" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Get Directions"
                    android:id="@+id/btnGetDirections">

                </Button>

                <Button
                    android:id="@+id/btnGetAlternativeDistance"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:text="Alternative Route">

                </Button>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <Button
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:text="View all hotspots"
                    android:id="@+id/btnViewHotspots">

                </Button>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:text="My Location"
                    android:id="@+id/btnCurrentLocation">

                </Button>



            </LinearLayout>






        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>