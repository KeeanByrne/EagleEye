<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0BFE2"
        android:orientation="vertical">

        <!-- Layout 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- TextView -->
            <TextView
                android:id="@+id/text_logo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <!-- ImageView Home Screen -->
            <ImageView
                android:id="@+id/homeBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:contentDescription="Image representing something"
                android:scaleType="centerCrop"
                android:src="@drawable/home_screen" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="Image representing something"
                android:scaleType="centerCrop"
                android:src="@drawable/jeff_bezos" />


        </LinearLayout>

        <!-- Layout 2 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TextView -->
            <TextView
                android:id="@+id/text_logo_observations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:text="Observations"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:layout_weight="1" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>