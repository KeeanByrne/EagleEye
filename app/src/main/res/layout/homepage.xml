<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#A0BFE2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <!--  -->
            <androidx.cardview.widget.CardView
                android:id="@+id/myCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                orientation="horizontal"
                android:contentDescription="Image representing something"
                tools:ignore="ExtraText"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- TextView -->
                    <TextView
                        android:id="@+id/text_logo"
                        android:layout_width="0dp"
                        android:layout_weight="1"                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:textStyle="bold"/>

                    <!-- ImageView -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Image representing something"
                        android:src="@drawable/settings_cog"
                        android:scaleType="centerCrop"
                        />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="Image representing something"
                        android:src="@drawable/jeff_bezos"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!-- Recent Bird Observation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <!-- Label for recent bird observations -->
            <TextView
                android:id="@+id/myLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent bird observations"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                />

            <!-- Details of the bird observations -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                >

                <!-- cards for the bird observation -->
                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

        <!-- The menu layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Label for menu -->
            <TextView
                android:id="@+id/menuLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textSize="18sp"
                android:textColor="#C1E1C1"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                />

            <!-- Menu options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"> 

                <!-- Observations -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    android:onClick="handleObservationPageClick">
                >

                    <!-- Observation info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <!-- Oberservation Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="Image representing something"
                                android:src="@drawable/binoculars_icon"
                                android:scaleType="centerCrop"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                />


                        </LinearLayout>

                        <!-- Oberservation Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"

                            >

                            <TextView
                                android:id="@+id/observationsHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Observations"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/observationsSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View observations"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Sightings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    android:onClick="handleSightingPageClick">
                    >

                    <!-- Sightings info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">


                        <!-- Sightings Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="Image representing something"
                                android:src="@drawable/binoculars_icon"
                                android:scaleType="centerCrop"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                />

                        </LinearLayout>

                        <!-- Sightings Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"

                            >

                            <TextView
                                android:id="@+id/sightingsHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sightings"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/sightingsSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Record Your Sightings"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Birding Hotspots -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    android:onClick="handleHotspotPageClick">
                    >

                    <!-- Birding Hotspot info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >


                        <!-- Birding Hotspot Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="Image representing something"
                                android:src="@drawable/popular_icon"
                                android:scaleType="centerCrop"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                />

                        </LinearLayout>

                        <!-- Birding Hotspot Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:id="@+id/hotspotHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Birding Hotspot"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                >

                            </TextView>

                            <TextView
                                android:id="@+id/hotspotSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View current bird hotspots"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Settings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="8dp"
                    android:onClick="handleSettingsPageClick">

                    <!-- Settings info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <!-- Settings Image -->
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            >

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:contentDescription="Image representing something"
                                android:src="@drawable/settings_cog"
                                android:scaleType="centerCrop"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                />

                        </LinearLayout>

                        <!-- Settings Text-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:id="@+id/settingsHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Settings"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/settingsSubHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Change your current settings"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>