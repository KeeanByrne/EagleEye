<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/editFirstName"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="First Name"
                android:background="@drawable/text_border"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/editSurname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Surname"
                android:background="@drawable/text_border"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <!-- Capture the Username details -->
            <EditText
                android:id="@+id/editUsername"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Username"
                android:background="@drawable/text_border"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                />

            <!-- Capture the email address details -->
            <EditText
                android:id="@+id/editEmailAddress"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Email Address"
                android:background="@drawable/text_border"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                />

            <!-- Capture the password details -->
            <EditText
                android:id="@+id/editPassword"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:background="@drawable/text_border"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                />

            <!-- Capture the password confirmation details.  -->
            <EditText
                android:id="@+id/editPasswordConfirmation"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Password Confirmation"
                android:background="@drawable/text_border"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                />

            <!-- Button to submit the user details and to log the user in. -->
            <Button
                android:id="@+id/btnSaveAccount"
                android:layout_width="360dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Register" />



        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>